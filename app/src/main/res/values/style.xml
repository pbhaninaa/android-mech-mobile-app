<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- App Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="android:editTextStyle">@style/InputField</item>
    </style>

    <!-- Buttons -->
<!--    <style name="PrimaryButton" parent="Widget.AppCompat.Button">-->
<!--        <item name="android:background">@drawable/bg_button_primary</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
