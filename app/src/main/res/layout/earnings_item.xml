<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txtClientUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Client: TBhani"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtCarDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SUV - DG1234"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtClientUsername"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtServicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $50.0"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtCarDetails"/>

        <TextView
            android:id="@+id/txtPaidAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="208dp"
            android:text="Paid At: 2025-09-19 23:01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtServicePrice" />

        <TextView
            android:id="@+id/txtJobDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Job: Car Wash Service"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtPaidAt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/txtPlatformFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Platform Fee: $5.0"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtJobDescription"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
