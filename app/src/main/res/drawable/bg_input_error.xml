<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Background color -->
    <solid android:color="@android:color/white" />

    <!-- Border for error -->
    <stroke
        android:width="2dp"
        android:color="@color/status_declined" /> <!-- red for error -->

    <!-- Optional padding inside -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
